<div class="resultshow">

  <div class="titleshow">
    <h1 class="course-title"> <%= @course.title %> </h1>
  </div>

  <div class="showww">
    <div class="colonne">
      <h4>Welcome back <span class="userrr"><%= @user.email %></span></h4>
        <% if @results.average(:value).round(1) > @course.average %>
          <p>Congratulations ! your grades are higher than the class average !</p>
          <p>Carry on this way !</p>
          <%= image_tag'https://res.cloudinary.com/dhxefoe7j/image/upload/v1664725424/Studeasy/Sans_titre_72_shvjtq.png', width:"80" %>
        <% end %>
        <% if @results.average(:value).round(1) < @course.average %>
          <p>Your results are under the average !</p>
          <p>Keep on working hard!</p>
          <%= image_tag'https://res.cloudinary.com/dhxefoe7j/image/upload/v1664725369/Studeasy/Sans_titre_73_bzov6b.png', width:"80" %>
        <% end %>
      <%= link_to"Back", results_path %>
    </div>

    <div class="droite">
      <div class="notesboard">
        <table class="notes">
              <tr class ="high">
                <th class ="topleft">Exam's date</th>
                <th class ="topright"> Grades</th>
              </tr>
              <tr>
                <%  @results.sort_by(&:date).reverse.each do |result| %>
                  <td class="datetd"><%= result.date.strftime("%Y-%b-%d")  %></td>
                  <% if result.value < 10 %>
                    <td class ="notevalue"><%= result.value %></td>
                      <style>
                        .notevalue {
                          color: rgb(237, 109, 89);
                        }
                      </style>
                  <% elsif result.value >= 10  %>
                    <td class ="noteplus"><%= result.value %></td>
                  <% end %>
              </tr>
                <% end %>
        </table>
      </div>

      <div class="moyennes">
        <div class="mamoyenne">
        <%= image_tag"https://res.cloudinary.com/dhxefoe7j/image/upload/v1664293875/Studeasy/Sans_titre_53_teyxrt.png", width:"100px" %>
          <h6 class="h6avg">Your average</h6>
          <p class='valuemoi'> <%= @results.average(:value).round(1) %>  </p>
        </div>

        <div class="classmoyenne">
          <%= image_tag"https://res.cloudinary.com/dhxefoe7j/image/upload/v1664293907/Studeasy/Sans_titre_52_f5e3sg.png", width:"100px" %>
          <h6 class="h6avg">Class average</h6>
          <p class ='valueclass'> <%= @course.average %> </p>
        </div>
      </div>

    </div>
