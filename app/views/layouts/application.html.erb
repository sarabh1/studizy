     <script src="https://cdn.anychart.com/releases/8.7.1/js/anychart-core.min.js"></script>
    <script src="https://cdn.anychart.com/releases/8.7.1/js/anychart-radar.min.js"></script>
    <style type="text/css">
      html, body, #container {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
      }
    </style>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>

    <%= yield %>
  </body>

  <script>
    function search_documents() {
    let input = document.getElementById('searchbar').value
    input=input.toLowerCase();
    let x = document.getElementsByClassName('a');

    for (i = 0; i < x.length; i++) {
        if (!x[i].innerHTML.toLowerCase().includes(input)) {
            x[i].style.display="none";
        }
        else {
            x[i].style.display="list-item";
        }
    }
}
  </script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://johannburkard.de/resources/Johann/jquery.highlight-4.js"></script>
  <script>
    $('#research').keyup(function() {
      var search_term = $('#research').val();
      $('.searched').removeHighlight().highlight(search_term);
    });
  </script>

  <script>
    anychart.onDocumentReady(function () {
    // our data from bulbapedia
      var data1 = [
        {x: "Maths basics", value: 17},
        {x: "Probabilities", value: 11},
        {x: "Algebra", value: 9.5},
        {x: "Geometry", value: 15},
        {x: "Statistics", value: 16},
        {x: "Maths History", value: 14},
      ];

      // var data2 = [
      //   {x: "Maths basics", value: 59},
      //   {x: "Probabilities", value: 62},
      //   {x: "Algebra", value: 40},
      //   {x: "Geometry", value: 65},
      //   {x: "Statistics", value: 59},
      //   {x: "Maths History", value: 55},
      // ];

      var data3 = [
        {x: "Maths basics", value: 9},
        {x: "Probabilities", value: 16},
        {x: "Algebra", value: 13},
        {x: "Geometry", value: 16},
        {x: "Statistics", value: 18},
        {x: "Maths History", value: 9},
      ];

      // create radar chart
      var chart = anychart.radar();
      // set chart yScale settings
      chart.yScale()
        .minimum(0)
        .maximum(20)
        .ticks({'interval':5});

      // create first series
      chart.line(data1)
      // create second series
      // chart.line(data2)
      // create third series
      chart.line(data3)
        // create first series
      chart.area(data1).name('September 22').markers(true).fill("#E55934", 0.3).stroke("#E55934")
      // create second series
      // chart.area(data2).name('January 22').markers(true).fill("#9BC53D", 0.3).stroke("#9BC53D")
      // create third series
      chart.area(data3).name('January 22').markers(true).fill("#5BC0EB", 0.3).stroke("#5BC0EB")

      // set chart title
      // chart.title("Last exams sessions results");
      // .legend(true);

      // set container id for the chart
      chart.container('container');
      // initiate chart drawing
      chart.draw();

    });
  </script>
</html>
