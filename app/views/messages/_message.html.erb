<% unless message.user == message.prev_message&.user %>
  <div class="message-info">
    <small>
      <% if message.user.nickname == nil %>
      <strong><%= message.user.email %></strong>
      <% else %>
      <strong><%= message.user.nickname %></strong>
      <% end %>
      <i><%= message.created_at.strftime("%b %e %l:%M %p") %></i>
      <img class="avatar-bordered" alt="avatar" src="https://loremflickr.com/300/300" />
    </small>
  </div> 
<% end %>

<div class="message-content">
    <p><%= message.content %></p>
</div>

<% message.attachments.each do |attachment| %>
  <%= link_to attachment.blob.filename.to_s, cl_image_path(attachment.key), target: "_blank" %>
<% end %>

