<div id="message-<%= message.id %>">
  <small>
    <strong><%= message.user.nickname %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %>

  <% @message.attachments.each do |attachment| %>
    <%# option dowload a file mais mauvais file inside
    <%= link_to @attachment, :download => 'File'  do %>

    <%= link_to attachment, :download => 'File', target: "_blank" do %>
      <%= cl_image_tag attachment.key, height: 200, width: 300, :crop=>"scale" %>
    <% end %>

  <% end %>
  </p>
</div>
