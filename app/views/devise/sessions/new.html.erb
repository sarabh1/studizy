
  <div class="logbox">

      <div class="up">
        <h1>Studizy</h1><br>
        <%# <p>The best way to pass your exams, easily!</p> %>
      </div>


      <div class="down">

        <div class="fond">

          <%= image_tag "https://res.cloudinary.com/dhxefoe7j/image/upload/v1662929197/Studeasy/STUDIZY_nl4jbz.png", width:"300px" %>
        </div>


        <div class="logform">
          <h2>Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit,  "Log in" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>

      </div>



  </div>
