<h1>List of courses</h1>

<div class= "result">

    <% @courses.each do |course| %>
        <div class="card-course">
        <img src="https://loremflickr.com/1080/1080/all" />
            <div class="card-course-infos">
                <h2> <%= course.title %></h2>
                <p> <%= course.description %></p>
                <p> Created by Professor (user_id) <%= course.user_id %></p>
                <p>Teacher ? <%= current_user.teacher? %></p>
                <br>
                <%= link_to "View course", course_path(course.id), class: "btn btn-flat" %>
                <img src="https://loremflickr.com/1080/1080/portrait" class="card-course-teacher avatar-bordered" />
            </div>
        </div>
    <% end %>
</div>
